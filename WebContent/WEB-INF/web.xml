<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>gameController</servlet-name>
		<servlet-class>controller.GameController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>gameController</servlet-name>
		<url-pattern>/gameController</url-pattern>
	</servlet-mapping>
	<welcome-file-list> <welcome-file>/LaunchPage.html</welcome-file> </welcome-file-list>
	
	<jsp-config>
    <taglib>
        <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
    </taglib>
</jsp-config> 
</web-app>